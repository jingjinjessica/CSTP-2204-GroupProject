<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); -%>
    <!-- dynamic page -->
</head>

<body>
    <%- include('./partials/header'); -%>
        <section class="section owner-info">
            <div class="container">
                <div class="row align-items-center columnEdit ">
                    <div class="col-lg-5">
                        <div class="info-avatar">
                            <img id="userImg" src="<%=owner.petImage %>" class="info-img" alt="user-image">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-text go-to">
                            <div class="row info-list">
                                <div class="col-md-12">
                                    <div class="info-area">
                                        <div class="media username">
                                            <span id="username">
                                                <%= post.title %>
                                            </span>
                                        </div>
                                        <div class="media ">
                                            <label>Pet Name:</label>
                                            <span class="location">
                                                <%= owner.petName %>
                                            </span>
                                        </div>
                                        <div class="media">
                                            <label>Location:</label>
                                            <span class="location">
                                                <%= owner.city %>,
                                                    <%= owner.province %>
                                            </span>
                                        </div>
                                        <div class="media">
                                            <label>Type:</lable>
                                                <span class="location">
                                                    <%= owner.petType %>
                                                </span>
                                        </div>
                                        <div class="media">
                                            <label>Age:</lable>
                                                <span class="location">
                                                    <%= owner.petAge %>
                                                </span>
                                        </div>
                                        <div class="media">
                                            <label>Weight:</label>
                                            <span class="location">
                                                <%= owner.petWeight %>
                                            </span>
                                        </div>
                                        <div class="media requirement-area">
                                            <span class="requirement-title">Requirement:</span>
                                            <p class="requirement text-break" id="requirement">
                                                <%= post.desc %>
                                            </p>
                                        </div>
                                        <div class="media">
                                            <label>Start Date:</label>
                                            <span class="location">
                                                <%= post.startDate %>
                                            </span>
                                        </div>
                                        <div class="media">
                                            <label>End Date:</label>
                                            <span class="location">
                                                <%= post.endDate %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <%- include('./partials/footer') %>
</body>

</html>