<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('../partials/head') %>
</head>

<body>
	<%- include('../partials/header') %>
		<div class="container">
			<section>
				<h3 class="display-3">
					<small class="text-primary dashboard-title">Dashboard </small>
				</h3>
				<div class="container-fluid">
					<div class="row dashboard-area-row">
					  <div class="col-sm-12">
						<div id="inam" class="carousel slide carousel-dark" data-interval="false">
						  <div class="carousel-inner">
								  <% var counter = 0 %>
								  <% for (var i = 0; i < posts.length; i++) { %>
									<% counter++ %>
									<% if (counter % 6 == 1) { %>
									  <div class="carousel-item <% if (counter == 1) { %>active<% } %>">
										<div class="container w-100 d-block">

											<div class="row">
												<% for(var i=0; i < posts.length; i++) {%>
													<div class="col-sm-12 col-lg-4">
														<div class="card h-100" style="width: 300px; margin: auto;">
															<img src="<%= postImage%>" >

															<div class="card-body">
																<h4 class="card-title" id="title">
																	<%= posts[i].title %>
																</h4>
																<p class="card-text" id="description">
																	<%= posts[i].desc %>
																</p>
																<p class="card-text" id="date">
																	<%= fd(posts[i].createdAt) %>
																</p>
																<button onclick="editPost('<%= posts[i]._id %>','<%= userType%>')">
																	edit
																</button>
																<button onclick="deletePost('<%= posts[i]._id %>','<%= userType%>')">
																	delete
																</button>
															</div>
														</div>
													</div>
												<%}%>
											</div>

										</div>
									  </div>
									</div>
									<% if (counter % 6 == 0 || i == posts.length - 1) { %>
										  </div>
										</div>
									  </div>
									<% } %>
								  <% } %>
						  </div>
						  <!-- btn for prev and next -->
						  <a href="#inam" class="carousel-control-prev" data-bs-slide="prev">
							<span class="carousel-control-prev-icon"></span>
						  </a>
						  <a href="#inam" class="carousel-control-next" data-bs-slide="next">
							<span class="carousel-control-next-icon"></span>
						  </a>
						</div>
					  </div>
					</div>
				  </div>
			</section>
		</div>
</body>
</html>