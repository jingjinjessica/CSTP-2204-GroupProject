<body>
    <%- include('../partials/header') %>

    <div class="container justify-content-center containerForm">
        <form onsubmit="sitterPost(event)">

            <div class="d-flex justify-content-center">
                <div class="row mb-3 col-md-6 mt-4">
                    <label for="ownerPostTitle" class="col-sm-2 col-form-label text_edit">Title:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="title" onchange="setTitle(event)">
                    </div>
                </div>
                
            </div>  

            <div class="d-flex justify-content-center mt-3">
                <div class="row mb-3 col-md-6">
                    <label class="col-form-label col-sm-2 pt-0 text_edit">Location</label>
                    <div class="col-sm-10">
                        <div class="form-check">
                            
                            <div class="input-group">
                                <label class="input-group-text">Province</label>
                                <select class="form-select">
                                    <option selected>Choose...</option>
                                    <option>France</option>
                                    <option>Germany</option>
                                    <option>Hungary</option>
                                </select>
                            </div>
                            
                        </div>
                        <div class="form-check">
                            <div class="input-group">
                                <label class="input-group-text">City</label>
                                <select class="form-select">
                                    <option selected>Choose...</option>
                                    <option>One</option>
                                    <option>Two</option>
                                    <option>Three</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

