            <div class="d-flex justify-content-center">
                <div class="row mb-3 col-md-6 mt-4">
                    <label for="" class="col-sm-2 col-form-label text_edit">Rate(CAD):</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="" onchange="">
                    </div>
                </div>
                
            </div>  

            <div class="mb-3">
                <label for="" class="form-label">Experiences:</label>
                <textarea class="form-control" id="experience" rows="3" onchange="setExp(event)"></textarea>
            </div>

            <!-- SUBMIT BUTTON -->
            <div class="col-12 text-end">
                <button type="submit" id="getValue" class="btn btn-primary saveBtn" onclick="testing()">Save</button>
            </div>
        </form>
    </div>

</body>
</html>
<script>
    $( function() {
          $( "#slider-range" ).slider({
            range: true,
            min: 0,
            max: 250,
            values: [ 0, 250 ],
            slide: function( event, ui ) {
            //   $( "#rate" ).val( "$" + ui.values[ 0 ] + " - $" + ui.values[ 1 ] );
              $( "#startrate" ).text( "$" + ui.values[ 0 ]);
              $( "#endrate" ).text( "$" + ui.values[ 1 ]);
            }
          });

          $( "#startrate" ).text( "$" + $( "#slider-range" ).slider( "values", 0 ));
          $( "#endrate" ).text( "$" + $( "#slider-range" ).slider( "values", 1 ));
          
    });  
</script>

