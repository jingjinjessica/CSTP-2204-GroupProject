    <body>
        <%- include('../partials/header'); -%>
            <section class="section owner-info">
                <div class="container">
                    <div class="row align-items-center ">
                        <div class="col-lg-5">
                            <div class="info-avatar">
                                <img id="userImg" src="<%= sitter.avatar %>" class="info-img" alt="user-image" name="avatar" >
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="about-text go-to">
                                <div class="row info-list">
                                    <div class="col-md-12">
                                        <div class="info-area">
                                            <div class="media username">
                                                <span id="username" name="name" ><%= sitter.name%></span>
                                            </div>
                                            <div class="media">
                                                <span class="location" name="province" ><%= sitter.province%></span>
                                            </div>
                                            <div class="media">
                                                <span class="location" name="city" > <%= sitter.city%></span>
                                            </div>
                                            <div class="media requirement-area">
                                                <span class="rate-title">Rate:</span>
                                                <p class="rate-from text-break" id="rate" name="rate" >From $ <%= post.rate%></p>
                                            </div>
                                            <div class="media requirement-area">
                                                <span class="rate-title">Services:</span>
                                                <p class="rate-from text-break" id="services" name="services" > <%= post.services%></p>
