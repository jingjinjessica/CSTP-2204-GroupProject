<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    <script src="./js/register.js"></script>
    <link rel="stylesheet" href="/css/register.css">

</head>

<body>
    <section class="vh-100">
        <div class="container-fluid h-custom">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
              <img src="/image/register-img.png"
                class="img-fluid" alt="register image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <h1 class="register-title "></h1>
                <hr>
                <form onsubmit="submitRegisterForm(event)">
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <label class="form-label" for="reg-email">Email address</label>
                    <input type="email" id="regEmail" class="form-control form-control-lg" onkeyup="setEmail(event)"/>
                </div>
                <!-- Password input -->
                <div class="form-outline mb-3">
                    <label class="form-label" for="reg-pwd">Password</label>
                    <input type="password" id="regPwd" class="form-control form-control-lg" onkeyup="setPassword(event)"/>
                </div>
                <!--Confirm Password input -->
                <div class="form-outline mb-3">
                    <label class="form-label" for="cnfPwd">Confirm Password</label>
                    <input type="password" id="cnfPwd" class="form-control form-control-lg" onkeyup="setConfPassword(event)"/>
                </div>
                <div class="have-an-account d-flex justify-content-between align-items-center">
                    <a href="/login">Have an account?</a>
                </div>
                <h6>Are You?</h6>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="owner" value="owner" checked onchange="handleClick(event)"/>
                    <label class="form-check-label" for="pet-owner">Pet Owner</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="sitter" value="sitter" onchange="handleClick(event)"/>
                    <label class="form-check-label" for="pet-sitter">Pet Sitter</label>
                  </div>
                <div class="d-flex align-items-center justify-content-center mt-4 pt-2">
                    <button type="submit" class="btn btn-primary btn-lg">Sign up</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
</body>

</html>