<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/createPetSitter.css">
    <link rel="stylesheet" href="/css/createPetOwner.css">
    <title>Creatine Pet Owner Profile</title>
</head>
<body>
    <div class="container mw-100 container_edit">
        <header class="d-flex flex-wrap justify-content-between mb-4 border-bottom">
            <a href="/" class="d-flex align-items-center py-2 mb-md-0 me-md-auto text-dark text-docation-none title_edit">
                <span class="fs-4">Companion Finder</span>
            </a>
            <ul class="nav nav-pills">
                <li class="nav-item"><a href="#" class="nav-link"> Username </a></li>
            </ul>
        </header>
    </div>

    <h5 style="text-align: center; color: #6B9080; font-weight: bold;"> 
        My Profile 
    </h5>

    <div class="container">
        <div class="d-flex justify-content-center mw-100">
            <form action="" class="form_input">

                <!-- CREATE PET OWNER PROFILE -->

                <label class="filebutton">
                    <span>
                        <input type="file" id="" name="myImg" onchange="attachMyProfile(this)" >
                        <img src="/image/add-img.png" alt="Add your profile picture" id="petOwnerProfile" class="imgCover">
                    </span>
                    
                </label>

                <!-- EMAIL -->
                <div class="row">
                    <div class="inputs">
                        <label class="email_edit">Email:</label>
                        <input type="text" class="" id="">
                    </div>
                </div>

                <!-- NAME -->
                <div class="row">
                    <div class="inputs">
                        <label class="email_edit">Name:</label>
                        <input type="text" class="" id="">
                    </div>
                </div>

                <!-- LOCATION -->
                <div class="row">
                    <div class="location_input inputs">
                        <label class="email_edit">Location:</label>
                        <div class="location2_input">
                            <input type="text" class="" id="" placeholder="Province">
                            <input type="text" class="city_input"  id="" placeholder="City">
                        </div>
                    </div>
                </div>

                <!-- PHONE -->
                <div class="row">
                    <div class="inputs">
                        <label class="email_edit">Phone:</label>
                        <input type="text" class="" id="">
                    </div>
                </div>

                <!-- PASSWORD -->
                <div class="row">
                    <div class="inputs">
                        <label class="email_edit">Password:</label>
                        <input type="text" class="" id="">
                    </div>
                </div>

                <!-- CONFIRM PASSWORD -->
                <div class="row">
                    <div class="inputs">
                        <label class="email_edit" style="text-align: left;">Confirm <br> Password:</label>
                        <input type="text" class="" id="">
                    </div>
                </div>

                <!-- REQUIREMENT -->
                <div class="row hire_edit" style="margin-top: 4em;"><label>Requirement:</label></div>
                <div class="row hire_inputs">
                    <textarea class="form-control" style="height:120px;" name="" id=""></textarea>
                </div>


                <!-- MY PET PROFILE -->
                <h5 style="text-align: center; color: #6B9080; font-weight: bold; margin-top: 2em;"> 
                    My Pet 
                </h5>

                <label class="filebutton">
                    <span>
                        <input type="file" id="" name="myImg" onchange="attachMyPetPic(this)" >
                        <img src="/image/add-img.png" alt="Add your profile picture" id="petProfile" class="imgCover">
                    </span>
                    
                </label>

                <!-- PET INFORMATION DETAILS -->
                <div class="container">
                    <div class="row">
                        <div class="row inputs">
                            <label for="">Name:</label>
                            <input type="text" id="">
                        </div>
                    </div>
                    <div class="row">
                        <div class="row inputs">
                            <label for="">Age:</label>
                            <input type="text" id="">
                        </div>
                    </div>
                    <div class="row">
                        <div class="row inputs">
                            <label for="">Weigth(lbs):</label>
                            <input type="text" id="">
                        </div>
                    </div>
                    <div class="row">
                        <div class="row inputs">
                            <label for="">Breed:</label>
                            <input type="text" id="">
                        </div>
                    </div>
                </div>
                
                <!-- SUBMIT BUTTON -->
                <div class="text-right">
                    <button type="submit" id="" class="btn btn-primary saveBtn">Save</button>
                </div>
                
            </form>
</body>
</html>
<script>
    function attachMyProfile(input){
        if(input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function(e) {
                var image = document.getElementById('petOwnerProfile');
                image.src = e.target.result;
                image.className = "profileImg_edit";
            };

            reader.readAsDataURL(input.files[0]);
        }
    }

    function attachMyPetPic(input){
        if(input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function(e) {
                var image = document.getElementById('petProfile');
                image.src = e.target.result;
                image.className = "profileImg_edit";
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>